problem ->flatten binary tree into linked list
  class Solution
{
    public:
    void flatten(Node *root)
    {
      Node* curr=root;
      while(curr!=NULL){
          if(curr->left){
              Node* pred=curr->left;
              while(pred->right!=NULL){
                  pred=pred->right;
              }
                  
                      pred->right=curr->right;
                      curr->right=curr->left;
                      curr->left=NULL; 
              }
              curr=curr->right;
          }
      }
    
};
